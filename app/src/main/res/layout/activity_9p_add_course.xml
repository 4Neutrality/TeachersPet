<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BasicLayout"
    tools:context="com.example.teacherspet.control.AddCoursePActivity" >

    <!-- Top Layout -->
    <LinearLayout
        style="@style/LinearInput">
        
        <!-- ID Entry -->
		<EditText 
		   android:id="@+id/cid"
		   style="@style/TextInput"
		   android:inputType="number"
		   android:hint="@string/lbl_enter_pID"/>
		    
		<!-- Course Entry -->
		<EditText
		   android:id="@+id/course"
		   style="@style/TextInput"
		   android:hint="@string/lbl_enter_course"/>
		
		<!-- School Term Entry -->
		<EditText
		   android:id="@+id/term"
            style="@style/TextInput"
		   android:hint="@string/lbl_enter_term"/>

        <!-- Class Time Entry -->
        <EditText
            android:id="@+id/time"
            style="@style/TextInput"
            android:hint="@string/lbl_enter_cTime"/>
		
		<!-- School Term Entry -->
		<EditText
		   android:id="@+id/section"
            style="@style/TextInput"
           android:maxLength="1"
		   android:inputType="number"
		   android:hint="@string/lbl_enter_section"/>

        <!-- Day of Class -->
        <EditText
            android:id="@+id/days"
            style="@style/TextInput"
            android:digits="@string/alphabet"
            android:hint="@string/lbl_enter_days"/>

	</LinearLayout>
    
    <!-- Submit Button -->
    <Button
        style="@style/ActionButton"
        android:layout_alignParentBottom="true"
        android:text="@string/lbl_submit"/>

</RelativeLayout>
