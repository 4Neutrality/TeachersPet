<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BasicLayout"
    tools:context="com.example.teacherspet.control.CoursesActivity" >

    <!--  Course Button -->
    <LinearLayout
        style="@style/LinearV"
        android:layout_centerVertical="true">
        <Button
            android:id="@+id/btn_course0"
            style="@style/ActionButton"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_course2"
            style="@style/ActionButton"
            android:layout_above="@id/btn_course0"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_course3"
            style="@style/ActionButton"
            android:layout_above="@id/btn_course2"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_course1"
            style="@style/ActionButton"
            android:layout_below="@id/btn_course0"
            android:visibility="gone" />
    </LinearLayout>
    
    <!--  Add Course Button-->
    <Button
        android:id="@+id/btn_addCourse"
        style="@style/PlusButton"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>

