<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BasicLayout"
    tools:context="com.example.teacherspet.control.AddCoursePActivity" >

    <!-- Top Layout -->
    <LinearLayout
        style="@style/LinearInput">
        
        <!-- ID Entry -->
		<EditText 
		   android:id="@+id/cid"
		   style="@style/TextInput"
		   android:inputType="number"
		   android:hint="@string/lbl_enter_pID"/>
		    
		<!-- Course Entry -->
		<EditText
		   android:id="@+id/course"
		   style="@style/TextInput"
		   android:hint="@string/lbl_enter_course"/>
		
		<!-- School Term Entry -->
        <Spinner
            android:id="@+id/term"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <!-- Class Time Entry -->
        <Spinner
            android:id="@+id/time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/time"/>
		
		<!-- School Term Entry -->
		<EditText
		   android:id="@+id/section"
            style="@style/TextInput"
           android:maxLength="1"
		   android:inputType="number"
		   android:hint="@string/lbl_enter_section"/>

        <!-- Day of Class -->
        <Spinner
            android:id="@+id/days"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/days"/>

	</LinearLayout>
    
    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit"
        style="@style/ActionButton"
        android:layout_alignParentBottom="true"
        android:text="@string/lbl_submit"/>

</RelativeLayout>
