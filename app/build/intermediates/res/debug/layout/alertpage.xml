<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BasicLayout"
    tools:context="com.example.teacherspet.control.AlertsActivity" >

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        style="@style/TextCenter"
        android:layout_marginBottom="@dimen/title_margin"/>

    <!-- Middle layout -->
    <ScrollView
        style="@style/BasicLayout"
        android:layout_below="@id/title"
        android:layout_marginBottom="@dimen/bot_margin">
        <TextView
            android:id="@+id/descript"
            style="@style/BasicText"
            android:textSize="15dp"/>
    </ScrollView>

     <!-- Bottom Buttons -->
    <LinearLayout
        style="@style/LinearInput"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/bnt_submit"
            style="@style/ActionButton"
            android:layout_weight="5"
            android:visibility="gone"
            android:text="@string/lbl_submit"/>
        <Button
            android:id="@+id/bnt_delete"
            style="@style/ActionButton"
            android:layout_weight="5"
            android:text="@string/lbl_delete"/>
    </LinearLayout>

</RelativeLayout>
